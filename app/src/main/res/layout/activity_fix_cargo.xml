<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".fix_cargo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:text="@string/cargo_button"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_cargo_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/button_color"
        android:text="@string/save_time_button"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/save_cargo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/baggage_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/baggage_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/baggage_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor,DuplicateSpeakableTextCheck" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cargo_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/cargo_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/cargo_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mail_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/mail_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/mail_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weapon_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/weapon_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp"/>

                <EditText
                    android:id="@+id/weapon_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dang_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/dang_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/dang_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/animal_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/animal_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/animal_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>