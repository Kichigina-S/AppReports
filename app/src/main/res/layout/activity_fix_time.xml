<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".FixTime">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:text="@string/fix_time_button"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_time_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/button_color"
        android:text="@string/save_time_button"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/save_time_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/appear_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/appear_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp"/>

                <EditText
                    android:id="@+id/appear_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_time"
                    android:background="@color/button_color"
                    android:hint="@string/example_time"
                    android:inputType="datetime"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor,DuplicateSpeakableTextCheck" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/docs_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/docs_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/docs_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_time"
                    android:background="@color/button_color"
                    android:hint="@string/example_time"
                    android:inputType="datetime"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/beg_pax_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/beg_pax_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp"/>

                <EditText
                    android:id="@+id/beg_pax_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_time"
                    android:background="@color/button_color"
                    android:hint="@string/example_time"
                    android:inputType="datetime"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/end_pax_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/end_pax_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp"/>

                <EditText
                    android:id="@+id/end_pax_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_time"
                    android:background="@color/button_color"
                    android:hint="@string/example_time"
                    android:inputType="datetime"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/close_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/close_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp"/>

                <EditText
                    android:id="@+id/close_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_time"
                    android:background="@color/button_color"
                    android:hint="@string/example_time"
                    android:inputType="datetime"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/delay_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/delay_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/delay_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_time"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    tools:ignore="LabelFor" />
            </TableRow>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>