<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".fix_kitchen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="@string/kitchen_button"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_kitchen_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/button_color"
        android:text="@string/save_time_button"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/save_kitchen_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/y_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/y_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/y_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor,DuplicateSpeakableTextCheck" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/c_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/c_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/c_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/k_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/k_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/k_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/chml_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/chml_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/chml_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/meml_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/meml_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/meml_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fiml_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/fiml_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/fiml_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vgml_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/vgml_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/vgml_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/brml_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/brml_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/brml_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"

                    tools:ignore="LabelFor" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/total_textView"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/total_textView"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/total_editText"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:autofillHints="@string/example_del"
                    android:background="@color/button_color"
                    android:hint="@string/example_del"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColorHint="@color/text_color"
                    android:focusableInTouchMode="false"
                    android:focusable="false"

                    tools:ignore="LabelFor" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>